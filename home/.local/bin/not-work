#!/bin/sh
# Workspace notification

#  █     █░ ▒█████   ██▀███   ██ ▄█▀
# ▓█░ █ ░█░▒██▒  ██▒▓██ ▒ ██▒ ██▄█▒ 
# ▒█░ █ ░█ ▒██░  ██▒▓██ ░▄█ ▒▓███▄░ 
# ░█░ █ ░█ ▒██   ██░▒██▀▀█▄  ▓██ █▄ 
# ░░██▒██▓ ░ ████▓▒░░██▓ ▒██▒▒██▒ █▄
# ░ ▓░▒ ▒  ░ ▒░▒░▒░ ░ ▒▓ ░▒▓░▒ ▒▒ ▓▒
#   ▒ ░ ░    ░ ▒ ▒░   ░▒ ░ ▒░░ ░▒ ▒░
#   ░   ░  ░ ░ ░ ▒    ░░   ░ ░ ░░ ░ 
#     ░        ░ ░     ░     ░  ░   

work=$(bspc query -D -d focused --names)
notify-send.sh -r 1 "$(echo " $work")"
